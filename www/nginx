# vim: filetype=nginx
log_format general_format '$remote_addr $http_host $remote_user [$time_local] '
'"$request" $status $body_bytes_sent "$http_referer" "$http_user_agent"';

server {
    server_name .TOP_DOMAIN;
    rewrite ^ http://www.TOP_DOMAIN$document_uri permanent;
    access_log  /var/log/nginx/TOP_DOMAIN.access.log general_format;
    error_log   /var/log/nginx/TOP_DOMAIN.error.log;
}

server {
    server_name www.TOP_DOMAIN;
    access_log  /var/log/nginx/www.TOP_DOMAIN.access.log general_format;
    error_log   /var/log/nginx/www.TOP_DOMAIN.error.log;

    root APP_ROOT/public;

    error_page 404 /cache/404.html;

    merge_slashes on;

    location = /footprints {
        rewrite ^ /footprints.controller.php last;
    }

    location = / {
        set $request_document /cache/type/all/1.html;
        try_files $request_document /item_list.controller.php;
    }
    location ~ ^/(new|coming|tomorrow)$ {
        set $request_document /cache/type/all/$1/1.html;
        try_files $request_document /item_list.controller.php?filter=$1;
    }
    location ~ ^/((new|coming|tomorrow)/)?([1-9]\d?)\.html$ {
        set $request_document /cache/type/all$document_uri;
        try_files $request_document /item_list.controller.php?filter=$2&page=$3;
    }

    location ~ ^/([a-z]+)(/(new|coming|tomorrow))?/?$ {
        set $request_document /cache/type/$1/$3/1.html;
        try_files $request_document /item_list.controller.php?type=$1&filter=$3;
    }
    location ~ ^/([a-z]+)(/(new|coming|tomorrow))?/([1-9]\d?)\.html$ {
        set $request_document /cache/type$document_uri;
        try_files $request_document /item_list.controller.php?type=$1&filter=$3&page=$4;
    }

    location = /search {
        if ($arg_s ~ ^\s*$) {
            set $request_document /1.html;
            rewrite ^ $request_document last;
        }
        set $request_document "/cache/search/$arg_s/all/1.html";
        if (-f $request_document) {
            rewrite ^ $request_document break;
        }
        rewrite ^ /item_list.controller.php?search=$arg_s last;
    }

    location ~ "^/search/([^/ ]+)(/(new|coming|tomorrow))?/?$" {
        set $request_document /cache/search/$1/$3/1.html;
        try_files $request_document /item_list.controller.php?search=$1&filter=$3;
    }

    location ~ "^/search/([^/ ]+)(/(new|coming|tomorrow))?/([1-9]\d?).html$" {
        set $request_document /cache/search/$1/$3/$4.html;
        try_files $request_document /item_list.controller.php?search=$1&filter=$3&page=$4;
    }

    location ^~ /cache {
        internal;
    }

    location = /cache/404.html {
        internal;
        set $request_document $document_uri;
        try_files $request_document /error_page.controller.php;
    }

    location ~ .controller.php$ {
        internal;

        fastcgi_pass    127.0.0.1:9000;

        fastcgi_param	SCRIPT_FILENAME		APP_ROOT/index.php;
        fastcgi_param	DOCUMENT_URI		$document_uri;
        fastcgi_param	REQUEST_DOCUMENT	$request_document;

        fastcgi_param	QUERY_STRING		$query_string;
        fastcgi_param	REQUEST_METHOD		$request_method;
        fastcgi_param	DOCUMENT_ROOT		$document_root;
        fastcgi_param	ROOT_DOMAIN             TOP_DOMAIN;
    }
}
